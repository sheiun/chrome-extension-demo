{
  "name": "My Extension",
  "version": "1.0",
  "description": "My First Extension!",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "My Extesion",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": ["*://*.buddymojo.com/*"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": ["*://*.buddymojo.com/*", "storage", "webRequest"]
}
